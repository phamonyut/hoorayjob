<!DOCTYPE html>
<html>
<head>
  <title>Hoorayjob - <%=t :title_marketing_word %> </title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <!--[if IE]>
  <link href="/stylesheets/ie-hoorayjob.css" media="screen" rel="stylesheet" type="text/css" />
  <![endif]-->
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= yield(:head) %>
</head>
<body>
	<div class="container">
			<div class="content">
				<header>
					<div id="left-aside">
						<div class="main-logo"></div>
					</div>
					<div id="right-aside">
						<div id="login">
							<div class="username">
								<h3>ชื่อเข้าระบบ</h3>
								<input type="text" name="username">
							</div>
							<div class="password">
								<h3>รหัสผ่าน</h3>
								<input type="password" name="password">
							</div>
							<button>เข้าสู่ระบบ</button>
						</div>
						<div id="registration">
							<h1>สมัครสมาชิก</h1>

							<%= simple_form_for(@user, html: {class: 'signup-form'}, :validate => true, :url=>url_for(:controller=>'users', :action=>'create')) do |f| %>

								<%= f.input :first_name, label: false, placeholder: "ชื่อ นามสกุล" %>
								<div class="controls">
									<input id="user_username" name="user[username]" placeholder="ชื่อเพื่อเข้าระบบ (ภาษาอังกฤษ)" size="50" type="text">
									<div id="user_username_message" class="help-block"></div>
								</div>
								<!--%= f.input :username, :validate => false, label: false, placeholder: "ชื่อเพื่อเข้าระบบ (ภาษาอังกฤษ)" %-->
								<%= image_tag("LoadingIcons/Loading.gif", alt: "Loading", id: "loading-icon", class: "hide") %>
								<%= image_tag("LoadingIcons/Yes.png", alt: "Valid", id: "yes-icon", class: "hide") %>
								<%= image_tag("LoadingIcons/No.png", alt: "Invalid", id: "no-icon", class: "hide") %>
								<%= f.input :password, label: false, placeholder: "รหัสผ่าน" %>
								<%= f.input :password_confirmation, label: false, placeholder: "ยืนยันรหัสผ่านอีกครั้ง" %>

								<div class="form-actions">
									<button class="btn-highlight" name="commit" type="submit">ยืนยันการสมัคร</button>
								</div>
							<% end %>
						</div>
					</div>
