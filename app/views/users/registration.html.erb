<%= form_for(@user, :url=>url_for(:controller=>'users', :action=>'create'), html: {class: 'form-horizontal'}) do |f| %>
	<% if @user.errors.any? %>
		<div class="alert alert-error fade in">
			<button class="close" data-dismiss="alert" type="button"> &times; </button>
			<%= pluralize(@user.errors.count, "error") %>
			prohibited this user from being saved:
			<ul>
				<% @user.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="formFormat">
		<h1>Registration</h1>
		<table width="100%">
			<thead>
				<tr>
					<th colspan="2"><h3>General Information</h3></th>
				</tr>
			</thead>
			<tfoot>
				<tr>
					<td colspan="2">
						<%= f.submit %>
					</td>
				</tr>		
			</tfoot>
			<tbody>
				<tr>
					<td><%= f.label :user_type %></td>
					<td>
						<%= f.radio_button(:user_type, "I", :checked=>"checked", :onchange=>"checkUserType()") %> Individual
						<%= f.radio_button(:user_type, "C", :onchange=>"checkUserType()") %> Corporation
					</td>
				</tr>
				<tr>
					<td>Name*</td>
					<td>
						<%= f.text_field :first_name %>
					</td>
				</tr>
				<tr id="surnameRow">
					<td><%= f.label :last_name, "Surname*" %></td>
					<td><%= f.text_field :last_name %></td>
				</tr>
				<tr id="genderRow">
					<td><%= f.label :sex, "Gender*" %></td>
					<td>
						<%= f.radio_button(:sex, "M") %> Male
						<%= f.radio_button(:sex, "F") %> Female
					</td>
				</tr>
				<tr id="dobRow">
					<td><%= f.label :birthday %></td>
					<td><input type="date" name="birthday"></td>
				</tr>
				<tr id="idRow">
					<td><%=f.label :citizen_id, "Identification No" %></td>
					<td><%= f.text_field :citizen_id %></td>
				</tr>
				<tr>
					<td><%= f.label :phone, "Phone*" %></td>
					<td><%= f.text_field :phone %></td>
				</tr>
				<tr>
					<td><%= f.label :email %></td>
					<td><%= f.text_field :email %></td>
				</tr>
				<tr>
					<td><%= f.label :username, "Username*" %></td>
					<td><%= f.text_field :username %></td>
				</tr>
				<tr>
					<td><%= f.label :password, "Password*" %></td>
					<td><%= f.password_field :password %></td>
				</tr>
				<tr>
					<td><%= f.label :password_confirmation, "Password Confirmation*" %></td>
					<td><%= f.password_field :password_confirmation %></td>
				</tr>
				<tr>
					<td><%= f.label :address %></td>
					<td>
						<%= f.text_area :address, :rows=>"3" %>
					</td>
				</tr>
				<tr>
					<td><%= f.label :personal_info, "Additional Information" %></td>
					<td><%= f.text_area :personal_info, :rows=>"4" %></td>
				</tr>
				<tr>
					<td>Picture</td>
					<td><input type="file" name="picFile"></td>
				</tr>
			</tbody>
		</table>
	</div>
<% end %>

